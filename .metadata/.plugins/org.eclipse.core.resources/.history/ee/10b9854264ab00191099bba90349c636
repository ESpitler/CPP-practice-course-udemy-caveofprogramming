#include <iostream>
using namespace std;

int main() {

	for(int i = 99;i >= 0;i--)
	{
		cout << "Stage: " << i << endl; // prints !!!Hello World!!!
	}

	cout << "Cycle Complete - Commencing Shutdown..." << endl;

	return 0;
}
